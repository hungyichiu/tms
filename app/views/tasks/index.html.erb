<h1><%= t("tasks.task_list") %></h1>

<% @tasks.each do |task| %>
  <ul>
    <li><%= link_to task.title, task_path(task) %> <%= task.created_at %> <%= link_to t("tasks.edit"), edit_task_path(task) %> <%= link_to t("tasks.delete"), task_path(task), method:'delete',data: {confirm: t("tasks.delete_confirm")} %></li>
  </ul>

<% end %>

